<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
<!-- Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js" integrity="sha384-+YQ4JLhjyBLPDQt//I+STsc9iw4uQqACwlvpslubQzn4u2UU2UFM80nGisd026JF" crossorigin="anonymous"></script>
<!-- Bootstrap CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
<!-- Font Awesome Icons -->
<script src="https://kit.fontawesome.com/6cddfe5d5a.js" crossorigin="anonymous"></script>
<!-- Common CSS -->
<link rel="stylesheet" href="./../css/common.css">
<!-- jQuery API -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<!-- Native CSS -->
<link rel="stylesheet" href="./../css/cart.css">
</head>

<body>

  <section id="top-section">

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid nav-container">
        <a class="navbar-brand" href="/home-logged-in">WORLD <span class="coffee title">COFFEE</span> HOUSE </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" href="/coffee-logged-in"><span class="coffee-link">COFFEE</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/beans-logged-in"><span class="beans-link">BEANS</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/about-logged-in"><span class="about-link">ABOUT</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/contact-logged-in"><span class="contact-link">CONTACT</span></a>
            </li>
            <li class="nav-item seperator">
              <a class="nav-link">|</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/orders"><span class="orders-link">ORDERS</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/cart"><span class="cart-link">CART</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout"><span class="logout-link">LOGOUT</span></a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <script src="./../js/navbar-logged-in.js" charset="utf-8"></script>

    <div class="top-div table-responsive">
      <form action="/cart" method="post">
        <h1 class="h1-1">Your <span class="order">Order</span> On <span class="coffee brown"><%= order.date %></span></h1>
        <div class="cart table-responsive">
          <table class="table align-middle w-100 d-block d-md-table">
            <thead>
              <tr class="table-heading">
                <th></th>
                <th>Product</th>
                <th>Price</th>
                <th>Qty</th>
                <th>Total</th>
              </tr>
            </thead>

            <tbody>
              <% for (let i = 0; i < order.order.imgSrc.length; i++) { %>
              <tr>
                <td class="imgSrc"><img src="./../<%=order.order.imgSrc[i]%>" alt=""></td>
                <td class="product"><%=order.order.product[i]%></td>
                <td class="price"><%=order.order.price[i]%>/-</td>
                <td class="qty"><%=order.order.qty[i]%></td>
                <td class="total"><%=order.order.totalPrice[i]%>/-</td>
              </tr>
              <% } %>
            </tbody>

            <tfoot>
              <tr>
                <td>TOTAL:</td>
                <td class="numberOfItems"><%=order.order.imgSrc.length%> Item(s)</td>
                <td>-</td>
                <td><%=order.totalQty %> Kg</td>
                <td>â‚¹ <%=order.totalPrices %>/-</td>
              </tr>
            </tfoot>
          </table>
        </div>

        <button class="btn btn-lg proceed-btn" type="button" onclick="window.location.href='/orders'">Back</button>
      </form>
    </div>

    </<section>

    <%- include("footer-logged-in") -%>

    <script src="./../js/coffee-beans.js" charset="utf-8"></script>
    <script src="./../js/cart.js" charset="utf-8"></script>
</body>

</html>
